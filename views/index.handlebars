<h1>BURGERS!</h1>

<h2>EAT_THE_BURGERS!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">devoured?</label><br>
    <input type="radio" name="sleepy" value="1" checked> devoured!<br>
    <input type="radio" name="sleepy" value="0"> Awake
  </div>

  <button type="submit">Add burger</button>
</form>
